{
	"manifest_version": 3,
	"name": "Widen â€” Get More Instagram Followers",
	"version": "2.0",
	"description": "Widen helps you follow all of someone's followers, followings, or likers. grow your Instagram today!",
	"permissions": ["tabs", "contextMenus", "scripting"],
	"host_permissions": ["https://www.instagram.com/", "*://*/*"],
	"action": {
		"icons": {
			"16": "./icons/16.png",
			"32": "./icons/32.png",
			"48": "./icons/48.png",
			"64": "./icons/64.png",
			"128": "./icons/128.png",
			"256": "./icons/256.png"
		},
		"default_icon": "./icons/128.png"
	},
	"content_scripts": [
		{
			"matches": ["https://*.instagram.com/*"],
			"js": ["scripts/index.js"]
		}
	],
	"content_security_policy": {
		"extension_pages": "script-src 'self'; object-src 'self'"
	}
}
